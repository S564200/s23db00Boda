extends layout

block content
  h1= Webapps
  p Welcome to #{title}
  p This is webapps assignment 13 of Partha Sarathy Boda.
  button(type="button", class="btn btn-secondary", onclick="goFaster()") Press Me
  div
  button#speedButton(type="button", onclick="goFaster()") Increase Speed
  div#faster Increase the speed

  script. 
   var mph = 20;
   var change = 1;
   
   function goFaster() {
     mph += change;
     change += 1;
     document.getElementById("faster").innerText = `MPH ${mph} with change ${change}`;
    }
  a(href="/jackets") search results
  if (!user)
    a(href="/login") Login
    br
    a(href="/register") Register
  if (user)
    p You are currently logged in as #{user.username}
    a(href="/jackets") Take me to Jackets
    br
    a(href="/logout") Logout

